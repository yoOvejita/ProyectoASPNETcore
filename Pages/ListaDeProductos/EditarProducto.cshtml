@page
@model PrimerVistazoASPNETcore.Pages.ListaDeProductos.EditarProductoModel

<h2 class="text-info">Editar Producto</h2>
<div class="container border">
    <form method="post">
        <input type="hidden" asp-for="Producto.Id"/>
        <!--si hay un campo que no vamos a editar, lo podemo agregar como hidden-->
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Producto.Nombre"></label>
            </div>
            <div class="col-6">
                <input asp-for="Producto.Nombre" class="form-control" />
            </div>
            <span asp-validation-for="Producto.Nombre" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Producto.Precio"></label>
            </div>
            <div class="col-6">
                <input asp-for="Producto.Precio" class="form-control" />
            </div>
            <span asp-validation-for="Producto.Precio" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <input type="submit" value="Aplicar cambios" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control text-white">Regresar a lista</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial">
}
