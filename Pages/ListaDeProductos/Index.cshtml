@page
@model PrimerVistazoASPNETcore.Pages.ListaDeProductos.IndexModel

    <div class="container row">
        <div class="col-9">
            <h2 class="text-info">Lista de productos</h2>
        </div>
        <div class="col-3">
            <a asp-page="CrearProducto" class="btn btn-info text-white">Crear producto</a>
        </div>

        <div class="col-12 border p-3 mt-3">
            <form method="post">
                @if (Model.Productos.Count() > 0)
                {
                <table>
                    <tr class="table-secondary">
                        <th>
                            <label asp-for="Productos.FirstOrDefault().Nombre"></label>
                        </th>
                        <th>
                            <label asp-for="Productos.FirstOrDefault().Precio"></label>
                        </th>
                        <th>
                            <label>Opciones</label>
                        </th>
                    </tr>
                    @foreach (var prod in Model.Productos)
                    {
                        <tr>
                            <td>@Html.DisplayFor(mod => prod.Nombre)</td>
                        
                            <td>@Html.DisplayFor(mod => prod.Precio)</td>
                            <td>
                                <button asp-page-handler="Eliminar" asp-route-id="@prod.Id" onclick="return confirm('¿Seguro que quieres eliminar el registro?')" class="btn btn-danger btn-sm">Eliminar</button>
                                <a asp-page="EditarProducto" asp-route-id="@prod.Id" class="btn btn-success btn-sm text-white">Editar</a>
                            </td>
                        </tr>
                    }
                </table>
                }
                else {
                    <p>¡No hay ningun producto disponible!</p>
                }
            </form>
        </div>

        <!-- A continuación usamos una tabla más estilizada -->
        <div class="col-12" style="text-align:center">
            <br/>
            <span class="h3 text-info">A continuación usamos una tabla más estilizada</span>
        </div>
        <br/>

        <div class="col-12 border p-3">
            <table id="cargar_miTabla" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <td>Nombre</td>
                        <td>Precio</td>
                        <td>Opciones</td>
                    </tr>
                </thead>
            </table>
        </div>
    </div>


@section scripts{ 
    <script src="~/js/listaDeProductos.js"></script>
}